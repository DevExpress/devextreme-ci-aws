server {
    listen      443 ssl http2;

    ssl_certificate     /etc/letsencrypt/live/devextreme-ci.devexpress.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/devextreme-ci.devexpress.com/privkey.pem;
    ssl_dhparam         /dhparam.pem;
    ssl_session_cache   shared:SSL:1m;

    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload";

    include /etc/nginx/snippets/drone-proxy;
}
